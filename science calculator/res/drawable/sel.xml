<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
<shape>
<gradient
android:startColor="#727275"
android:endColor="#C8C8CC"
android:angle="180" />
<corners
android:radius="6dp" />
<stroke  android:width="1dp" android:color="#ffffff"/>
<padding
android:left="5dp"
android:top="5dp"
android:right="5dp"
android:bottom="5dp" />
</shape>
</item>

<item android:state_focused="true" >
<shape>
<gradient
android:endColor="#1C67E8"
android:startColor="#9FB0CF"
android:angle="270" />
<stroke
android:width="2dp"
android:color="#FAFAFA" />
<corners
android:radius="2dp" />
<padding
android:left="5dp"
android:top="5dp"
android:right="5dp"
android:bottom="5dp" />
</shape>
</item>

<item>
<shape
android:shape="rectangle" android:innerRadiusRatio="0.5" android:thicknessRatio="0.5" android:innerRadius="2dp" android:thickness="2dp">
<solid android:color="@android:color/transparent"></solid>
<!-- <corners-->
<!-- android:radius="10dp" />-->
<corners android:bottomRightRadius="4dp" android:bottomLeftRadius="4dp"
android:topLeftRadius="4dp" android:topRightRadius="4dp" />
</shape>
</item>

</selector>